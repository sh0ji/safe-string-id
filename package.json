{
  "name": "web-id",
  "version": "2.0.2",
  "description": "Convert strings into web-usable ids.",
  "browser": "dist/webid.browser.js",
  "main": "dist/webid.js",
  "scripts": {
    "build": "npm run build:browser && npm run build:node",
    "build:browser": "parcel build src/webid.js --target browser --out-file webid.browser.js",
    "build:node": "parcel build src/webid.js --target node",
    "dev": "parcel watch src/webid.js",
    "lint": "eslint src",
    "preversion": "npm run build",
    "report": "nyc report --reporter=html",
    "test": "ava",
    "test:coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sh0ji/web-id.git"
  },
  "author": "Evan Yamanishi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sh0ji/web-id/issues"
  },
  "homepage": "https://github.com/sh0ji/web-id#readme",
  "devDependencies": {
    "ava": "^0.24.0",
    "babel-preset-airbnb": "^2.5.2",
    "coveralls": "^3.0.2",
    "del": "^3.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "nyc": "^11.9.0",
    "parcel-bundler": "^1.9.7"
  },
  "dependencies": {
    "shortid": "^2.2.12",
    "slugify": "^1.3.0"
  }
}
